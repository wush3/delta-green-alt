<form class="item-sheet {{cssClass}}" autocomplete="off">


    <div class="itemdata">
        <div class="item-header">
            <div class="vertical-header">
                {{ localize "dgalt.labels.weaponsheet.header"}}
            </div>
        </div>
        <div class="item-block">
            <div class="item-titlebar">
                <img class="item-icon" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
                <div class="expand">
                    <div class="form-label">{{localize 'name'}}</div>
                    <input class="form-inputbox item-label" name="name" type="text" value="{{item.name}}"
                        placeholder="{{ localize 'Name' }}" />
                </div>

            </div>
            <div class="item-data">




                <div class="form-hor-group">
                    <div>
                        <div class="form-label">{{localize 'dgalt.labels.weaponsheet.attackskill'}}</div>
                        <select class="select" name="system.attackskill">
                            {{selectOptions config.attackskills selected=item.system.attackskill localize=true}}
                        </select>

                    </div>
                    <div class="center">
                        <div class="form-label">%</div>

                        <input class="form-inputbox-number" type="number" name="system.attackvalue" data-dtype="number"
                            readonly value="{{selectattack item.actor.system.attacks item.system.attackskill}}">

                    </div>
                    <div class="center">
                        <div class="form-label">{{localize 'dgalt.labels.weaponsheet.mod'}}</div>
                        <input class="form-inputbox-number" type="number" name="system.mod" value="{{item.system.mod}}"
                            data-dtype="number" />
                    </div>
                </div>

                <hr>

                <div class="form-hor-group">
                    <div class="center">
                        <div class="form-label">{{localize
                            'dgalt.labels.weaponsheet.islethal'}}</div>
                        <a class="item-control item-checkmark" data-field="system.islethal"><i
                                class="fas {{#if item.system.islethal}}fa-plus-square{{else}}fa-square{{/if}}"></i></a>
                    </div>


                    <div class="center">
                        <div class="form-label">{{localize 'dgalt.labels.weaponsheet.damage'}}</div>
                        <input class="form-inputbox-centered shorttext" type="text" name="system.damage"
                            value="{{item.system.damage}}" data-dtype="string" />
                    </div>

                    <div class="center">
                        <div class="form-label">{{localize
                            'dgalt.labels.weaponsheet.db'}}</div>
                        <a class="item-control item-checkmark" data-field="system.db"><i
                                class="fas {{#if item.system.db}}fa-plus-square{{else}}fa-square{{/if}}"></i></a>
                    </div>

                    <div class="center contract">
                        <div class="form-label">{{localize 'dgalt.labels.weaponsheet.ap'}}</div>
                        <input class="form-inputbox-number" type="number" name="system.ap" value="{{item.system.ap}}"
                            data-dtype="number" />
                    </div>

                    <div class="center">
                        <div class="form-label">{{localize 'dgalt.labels.weaponsheet.lethality'}}</div>
                        <input class="form-inputbox-number" type="number" name="system.lethality"
                            value="{{item.system.lethality}}" data-dtype="number" />
                    </div>
                    <div class="center">
                        <div class="form-label">{{localize 'dgalt.labels.weaponsheet.killradius'}}</div>
                        <input class="form-inputbox-number" type="number" name="system.killradius"
                            value="{{item.system.killradius}}" data-dtype="number" />
                    </div>

                </div>

                <div class="form-hor-group">
                    <div class="center">
                        <div class="form-label">{{localize
                            'dgalt.labels.weaponsheet.isranged'}}</div>
                        <a class="item-control item-checkmark" data-field="system.isranged"><i
                                class="fas {{#if item.system.isranged}}fa-plus-square{{else}}fa-square{{/if}}"></i></a>
                    </div>
                    {{#if item.system.isranged}}
                    <div class="center">
                        <div class="form-label">{{localize 'dgalt.labels.weaponsheet.range'}}</div>
                        <input class="form-inputbox-number" type="number" name="system.range" value="{{item.system.range}}"
                            data-dtype="number" />
                    </div>
                    {{/if}}
                </div>

                <div class="form-hor-group">
                    <div class="center">
                        <div class="form-label">{{localize
                            'dgalt.labels.weaponsheet.usesammo'}}</div>
                        <a class="item-control item-checkmark" data-field="system.usesammo"><i
                                class="fas {{#if item.system.usesammo}}fa-plus-square{{else}}fa-square{{/if}}"></i></a>
                    </div>
                    {{#if item.system.usesammo}}

                    <div class="center">
                        <div class="form-label">{{localize 'dgalt.labels.weaponsheet.currammo'}}</div>
                        <input class="form-inputbox-number" type="number" name="system.ammocurrent"
                            value="{{item.system.ammocurrent}}" data-dtype="number" />
                    </div>
                    /
                    <div class="center">
                        <div class="form-label">{{localize 'dgalt.labels.weaponsheet.maxammo'}}</div>
                        <input class="form-inputbox-number" type="number" name="system.ammomax"
                            value="{{item.system.ammomax}}" data-dtype="number" />
                    </div>

                    <div class="center">
                        <div class="form-label">{{localize 'dgalt.labels.weaponsheet.ammoperattack'}}</div>
                        <input class="form-inputbox-number" type="number" name="system.ammoperattack"
                            value="{{item.system.ammoperattack}}" data-dtype="number" />
                    </div>


                    {{/if}}
                </div>
                <hr>

                <div class="form-hor-group">
                    <div>
                        <div class="form-label">{{localize
                            'dgalt.labels.weaponsheet.expense'}}</div>
                        <select class="select" name="system.expense">
                            {{selectOptions config.expense selected=item.system.expense localize=true}}
                        </select>
                    </div>
                </div>

                <div class="form-hor-group">
                    <a class="item-control item-checkmark" data-field="system.isrestricted"><i
                            class="fas {{#if item.system.isrestricted}}fa-plus-square{{else}}fa-square{{/if}}"></i></a>
                    <div class="form-label">{{localize
                        'dgalt.labels.weaponsheet.isrestricted'}}</div>
                </div>

            </div>

            <div>

            </div>

            <div class="form-label">{{localize 'dgalt.labels.skillsheet.description'}}</div>
            {{editor item.system.description target="system.description" button=true owner=owner
            editable=editable}}
        </div>
    </div>
</form>
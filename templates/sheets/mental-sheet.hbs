<form class="item-sheet {{cssClass}}" autocomplete="off">

    <div class="itemdata">
        <div class="item-header">
            <div class="vertical-header">
                {{#if item.system.isdisorder}}
                {{localize 'dgalt.labels.mentalsheet.headerdisorder'}}
                {{else}}
                {{localize 'dgalt.labels.mentalsheet.headermotivation'}}
                {{/if}}
            </div>
        </div>
        <div class="item-block">

            <div class="item-titlebar">
                <img class="item-icon" src="{{item.img}}" data-edit="img" title="{{item.name}}" />
                {{#if item.system.isdisorder}}
                <div class="expand">
                    <div class="form-label">{{localize 'dgalt.labels.mentalsheet.alternative'}}</div>
                    <input class="form-inputbox item-label" name="data.alternative" type="text"
                        value="{{item.system.alternative}}" />
                </div>
                {{else}}
                <div class="expand">
                    <div class="form-label">{{localize 'name'}}</div>
                    <input class="form-inputbox item-label" name="name" type="text" value="{{item.name}}"
                        placeholder="{{ localize 'Name' }}" />
                </div>
                {{/if}}
                <div class="contract center">
                    <div class="form-label-centered">{{localize
                        'dgalt.labels.mentalsheet.toggledisorder'}}</div>
                
                <a class="item-control item-checkmark" title="{{localize 'dgalt.labels.mentalsheet.toggledisorder'}}"
                    data-field="system.isdisorder">
                    <i class="{{#if item.system.isdisorder}}fas fa-plus-square{{else}}fas fa-square{{/if}}"></i>
                </a>
                </div>

            </div>
            <div class="item-data">

                {{#if item.system.isdisorder}}

                <div class="expand">
                    <div class="form-label">{{localize 'dgalt.labels.mentalsheet.trigger'}}</div>
                    <input class="form-inputbox" name="data.trigger" type="text" value="{{item.system.trigger}}" />
                </div>
                <div class="center">
                    <div class="form-label">{{localize
                        'dgalt.labels.mentalsheet.cured'}}</div>
                    <a class="item-control item-checkmark" title="{{localize 'dgalt.labels.mentalsheet.iscured'}}"
                        data-field="system.iscured">
                        <i class="{{#if item.system.iscured}}fas fa-plus-square{{else}}fas fa-square{{/if}}"></i>
                    </a>
                </div>
                {{/if}}

            </div>

            <label class="form-label">{{localize 'dgalt.labels.skillsheet.description'}}</label>

            {{#if item.system.isdisorder}}
            {{editor item.system.description target="system.descriptiondisorder" button=true owner=owner
            editable=editable}}
            {{else}}
            {{editor item.system.description target="system.description" button=true owner=owner editable=editable}}
            {{/if}}


        </div>


</form>
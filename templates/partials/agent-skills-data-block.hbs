<div class="skilldata">
    <div class="skills-header">
        <div class="vertical-header">
            {{localize 'dgalt.labels.skilldata.header'}}
        </div>
        <div class="item-controls">
            &nbsp;
            <a class="item-control item-create" data-type="Skill">
                <i class="fas fa-plus"></i>
            </a>
        </div>
    </div>
    <div class="skills-block">


        <ol class="item-list">
            {{#each skills as |skill id|}}
            <li class="item itemV2" data-skill-id="{{skill._id}}" data-item-id="{{skill._id}}">                
                <a class="item-control item-checkmark" title="CHECK" data-field="data.failcheck"><i
                        class="fas {{#if skill.data.failcheck}}fa-plus-square{{else}}fa-square{{/if}}"></i></a>
                <div class="item-name">
                    <div class="skill-name" data-dtype="String">{{skill.name}}&nbsp;({{skill.data.base}})</div>

                </div>

                <div class="item-score">
                    <input class="inline-edit" type="text" value="{{skill.data.value}}" data-dtype="Number" data-field="data.value">
                </div>
                <div class="item-controls">
                    <a class="item-control item-edit" title="EDIT"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete" title="DELETE"><i class="fas fa-trash"></i></a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
</div>




<form class="dgalt item roll-card" data-skill-id="{{_id}}" data-item-id="{{_id}}">

    <div class="itemdata">
        <div class="item-header">
            <div class="vertical-header">
                {{localize 'dgalt.labels.skillsheet.header'}}
            </div>
        </div>

        <div class="item-block">

            <div class="item-titlebar">
                <img class="item-icon" src="{{img}}" data-edit="img" title="{{name}}" />
                <div class="expand">
                    <div class="form-label">{{localize 'name'}}</div>
                    <input class="form-inputbox item-label" name="name" type="text" value="{{name}}"
                        placeholder="{{ localize 'Name' }}" readonly/>
                </div>
                <div class="center">
                    <div class="form-label">{{localize 'dgalt.labels.skillsheet.value'}}</div>
                    <input class="form-inputbox-number-stretch" type="number" name="system.value" value="{{value}}"
                        data-dtype="number" readonly/>
                </div>
            </div>

            <div class="item-data">
            </div>

            <div class="form-label">{{localize 'dgalt.labels.skillsheet.description'}}</div>
            {{{description}}}

        </div>
    </div>


</form>
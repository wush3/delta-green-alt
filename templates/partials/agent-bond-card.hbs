<div class="bond-card">
    <div class="bond-name">
       {{name}} // {{data.relationship}} // {{data.value}}
    </div>
    <div class="bond-score"><input class="form-inputbox-centered" name="value" type="text" data-dtype="number"
            value="{{data.value}}" disabled /></div>
    <div class="bond-edit">
        <div class="item-controls">
            <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
    </div>
</div>


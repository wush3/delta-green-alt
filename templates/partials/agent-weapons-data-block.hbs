<div class="weaponsdata">
    <div class="weapons-header">
       
        <div class="button-bar-vertical">
            <a class="item-control item-create" data-type="Weapon" title="{{localize 'dgalt.labels.weaponsdata.addnew'}}"><i class="fas fa-plus"></i></a>            
            <a class="item-control editweapon-toggle" title="{{localize 'dgalt.labels.weaponsdata.inlineedit'}}"><i class="fas {{#if data.data.options.editweapons}}fa-toggle-on{{else}}fa-toggle-off{{/if}}"></i></a>
        </div>

        <div class="vertical-header">
            {{localize 'dgalt.labels.weaponsdata.header'}}
        </div>
    </div>
    <div class="weapons-block">


        <ol class="weapons-list">
            {{#each weapons as |weapon id|}}
            {{> "systems/delta-green-alt/templates/partials/weapon-card.hbs" weapon}}
            {{/each}}
        </ol>
    </div>
</div>
<li class="item weapon-card" data-skill-id="{{_id}}" data-item-id="{{_id}}">



    <div class="item-image" style="background-image: url('{{img}}')"></div>


    <div class="weapon-name {{#if @root.data.data.options.editweapons}}inline-edit{{/if}} " data-dtype="String">{{name}}
    </div>




    <div class="mod-selector">
        <div class="mod-button item-roll" data-rolltype="item" data-mod="-40" data-targetfield="attackvalue">-40</div>
        <div class="mod-button item-roll" data-rolltype="item" data-mod="-20" data-targetfield="attackvalue">-20</div>
        <div class="mod-button item-roll" data-rolltype="item" data-mod="0" data-targetfield="attackvalue">0</div>
        <div class="mod-button item-roll" data-rolltype="item" data-mod="20" data-targetfield="attackvalue">+20</div>
        <div class="mod-button item-roll" data-rolltype="item" data-mod="40" data-targetfield="attackvalue">+40</div>
    </div>

    <!--<div class="weapon-stat">
        <input {{#unless @root.data.data.options.editweapons}}readonly{{/unless}} class="inline-edit" type="number"
            value="{{data.attackvalue}}" data-dtype="Number" data-field="data.attackvalue">
    </div>-->

    <div class="weapon-stat">{{add data.attackvalue data.mod}}%</div>
    

    {{#if data.islethal}}
    <div>
        <input class="form-inputbox-number shorttext" type="number" name="lethality"
            value="{{data.lethality}}" data-dtype="number" readonly />
    
    
       
        <input class="form-inputbox-number" type="number" name="killradius" value="{{data.killradius}}"
            data-dtype="number" readonly/>
    </div>
    {{else}}
    
        <input class="form-inputbox-centered shorttext" type="text" name="damage" value="{{data.damage}}"
            data-dtype="string" readonly />
    
    {{/if}}

    <div class="item-controls">
        <a class="item-control item-edit" title="EDIT"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="DELETE"><i class="fas fa-trash"></i></a>
    </div>
</li>
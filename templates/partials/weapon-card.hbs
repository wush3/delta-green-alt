<li class="item weapon-card" data-skill-id="{{_id}}" data-item-id="{{_id}}">


    <div class="gearcard-image" style="background-image: url('{{img}}')"></div>


    <!--<div class="weapon-name {{#if @root.system.options.editweapons}}inline-edit{{/if}} " data-dtype="String">{{name}}
    </div>-->

    <div class="weapon-name-wrapper">
        <div class="weapon-name" data-dtype="String">{{name}}
        </div>

        <div class="mod-selector-hidden outline">
            <div class="mod-button item-roll" data-rolltype="weapon" data-mod="-40" data-icon="{{img}}"
                data-label="{{name}}"
                data-basetarget="{{selectattackmod @root.actor.system.attacks system.attackskill system.mod}}">-40</div>
            <div class="mod-button item-roll" data-rolltype="weapon" data-mod="-20" data-icon="{{img}}"
                data-label="{{name}}"
                data-basetarget="{{selectattackmod @root.actor.system.attacks system.attackskill system.mod}}">-20</div>
            <div class="mod-button item-roll" data-rolltype="weapon" data-mod="0" data-icon="{{img}}"
                data-label="{{name}}"
                data-basetarget="{{selectattackmod @root.actor.system.attacks system.attackskill system.mod}}">0</div>
            <div class="mod-button item-roll" data-rolltype="weapon" data-mod="20" data-icon="{{img}}"
                data-label="{{name}}"
                data-basetarget="{{selectattackmod @root.actor.system.attacks system.attackskill system.mod}}">+20</div>
            <div class="mod-button item-roll" data-rolltype="weapon" data-mod="40" data-icon="{{img}}"
                data-label="{{name}}"
                data-basetarget="{{selectattackmod @root.actor.system.attacks system.attackskill system.mod}}">+40</div>
        </div>

    </div>

    <div class="weapon-stat">
        {{selectattackmod @root.actor.system.attacks system.attackskill system.mod}}%
    </div>

    <div class="weapon-stat">
        {{#if system.isranged}}
        {{system.range}}m
        {{else}}
        melee
        {{/if}}
    </div>

    <div class="weapon-dmg-wrapper">
        <div class="weapon-stat">
            <input class="form-inputbox-centered shorttext" type="text" name="damage"
                value="{{#if system.db}}{{system.damage}}{{@root.system.statistics.strength.bonus}}{{else}}{{system.damage}}{{/if}}"
                data-dtype="string" readonly />
        </div>

        <div class="mod-selector-hidden center">
            <div class="mod-button item-roll" data-rolltype="damage" data-mult="1" data-icon="{{img}}"
                data-label="{{name}}"
                data-dmgformula="{{#if system.db}}{{system.damage}}{{@root.system.statistics.strength.bonus}}{{else}}{{system.damage}}{{/if}}">
                x1</div>
            <div class="mod-button item-roll" data-rolltype="damage" data-mult="2" data-icon="{{img}}"
                data-label="{{name}}"
                data-dmgformula="{{#if system.db}}{{system.damage}}{{@root.system.statistics.strength.bonus}}{{else}}{{system.damage}}{{/if}}">
                x2</div>
        </div>

    </div>

    <div class="weapon-stat">
        <input class="form-inputbox-number" type="number" name="ap" value="{{system.ap}}" data-dtype="number" readonly />
    </div>

    <div class="weapon-dmg-wrapper">
        <div class="weapon-stat">
            <input class="form-inputbox-centered" type="number" name="lethality" value="{{system.lethality}}"
                data-dtype="number" readonly />
        </div>
        <div class="mod-selector-hidden center">
            <div class="mod-button item-roll" data-rolltype="lethality" data-mult="1" data-icon="{{img}}"
                data-label="{{name}}" data-lethality="{{system.lethality}}">
                x1</div>
            <div class="mod-button item-roll" data-rolltype="lethality" data-mult="2" data-icon="{{img}}"
                data-label="{{name}}" data-lethality="{{system.lethality}}">
                x2</div>
        </div>
    </div>

    <div class="weapon-stat">
        <input class="form-inputbox-number" type="number" name="killradius" value="{{system.killradius}}"
            data-dtype="number" readonly />
    </div>

    {{#if system.usesammo}}
    <div class="weapon-stat">
        <input class="form-inputbox-number" type="number" name="ammocurrent" value="{{system.ammocurrent}}" readonly />

        <a class="item-control weapon-reload" title="{{localize 'dgalt.contextmenu.reload'}}">

            <i class="fas fa-sync weapon-button"></i>
        </a>
    </div>
    {{else}}
    <div class="weapon-stat"></div>
    {{/if}}

    <div class="item-controls">
        <a class="item-control item-edit" title="{{localize 'dgalt.contextmenu.edit'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize 'dgalt.contextmenu.delete'}}"><i
                class="fas fa-trash"></i></a>
    </div>

</li>
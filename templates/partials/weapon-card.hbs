<li class="item weapon-card" data-skill-id="{{_id}}" data-item-id="{{_id}}">


    <div class="item-image" style="background-image: url('{{img}}')"></div>


    <!--<div class="weapon-name {{#if @root.data.data.options.editweapons}}inline-edit{{/if}} " data-dtype="String">{{name}}
    </div>-->

    <div class="weapon-name-wrapper">

        <div class="weapon-name" data-dtype="String">{{name}}
        </div>

        <div class="mod-selector-hidden">
            <div class="mod-button item-roll" data-rolltype="weapon" data-mod="-40" data-icon="{{img}}"
                data-label="{{name}}"
                data-basetarget="{{selectattackmod @root.data.data.attacks data.attackskill data.mod}}">-40</div>
            <div class="mod-button item-roll" data-rolltype="weapon" data-mod="-20" data-icon="{{img}}"
                data-label="{{name}}"
                data-basetarget="{{selectattackmod @root.data.data.attacks data.attackskill data.mod}}">-20</div>
            <div class="mod-button item-roll" data-rolltype="weapon" data-mod="0" data-icon="{{img}}"
                data-label="{{name}}"
                data-basetarget="{{selectattackmod @root.data.data.attacks data.attackskill data.mod}}">0</div>
            <div class="mod-button item-roll" data-rolltype="weapon" data-mod="20" data-icon="{{img}}"
                data-label="{{name}}"
                data-basetarget="{{selectattackmod @root.data.data.attacks data.attackskill data.mod}}">+20</div>
            <div class="mod-button item-roll" data-rolltype="weapon" data-mod="40" data-icon="{{img}}"
                data-label="{{name}}"
                data-basetarget="{{selectattackmod @root.data.data.attacks data.attackskill data.mod}}">+40</div>
        </div>
    </div>

    
        <div class="weapon-stat">
            {{selectattackmod @root.data.data.attacks data.attackskill data.mod}}%
        </div>
    

  
        <div class="weapon-stat">
            {{#if data.isranged}}
            {{data.range}}m
            {{else}}
            melee
            {{/if}}
        </div>
   


   
        
    



   
        <input class="form-inputbox-centered shorttext" type="text" name="damage" value="{{#if data.db}}{{@root.data.data.statistics.strength.db}}{{else}}{{data.damage}}{{/if}}"
            data-dtype="string" readonly />

        <input class="form-inputbox-number shorttext" type="number" name="lethality" value="{{data.lethality}}"
            data-dtype="number" readonly />



        <input class="form-inputbox-number" type="number" name="killradius" value="{{data.killradius}}"
            data-dtype="number" readonly />

        <input class="form-inputbox-number" type="number" name="ap" value="{{data.ap}}" data-dtype="number" readonly />
   
        {{#if data.usesammo}}
        <input class="form-inputbox-number" type="number" name="ammocurrent" value="{{data.ammocurrent}}" readonly />
        <a class="item-control weapon-reload" title="RELOAD">

            <i class="fas fa-sync"></i>
        </a>
        {{else}}
        <div></div><div></div>
        {{/if}}
   
        <div class="item-controls">
            <a class="item-control item-edit" title="EDIT"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="DELETE"><i class="fas fa-trash"></i></a>
        </div>
    

</li>